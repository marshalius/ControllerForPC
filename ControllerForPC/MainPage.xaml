<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControllerForPC.MainPage"
             x:Name="thisContentPage"
             BackgroundColor="Black">

    <AbsoluteLayout x:Name="ContentLayout">

        <BoxView x:Name="BackgroundView" AbsoluteLayout.LayoutFlags="PositionProportional" Color="Black">
            <BoxView.GestureRecognizers>
                <PanGestureRecognizer />
            </BoxView.GestureRecognizers>

        </BoxView>

        <Button x:Name="MenuButton" Pressed="MenuButton_Pressed" Released="MenuButton_Released" AbsoluteLayout.LayoutFlags="PositionProportional" CornerRadius = "5" FontAttributes = "Bold" TextColor="Gray" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2"  />
        <Button x:Name="ShareButton" Pressed="ShareButton_Pressed" Released="ShareButton_Released" AbsoluteLayout.LayoutFlags="PositionProportional" CornerRadius = "5" FontAttributes = "Bold" TextColor="Gray" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2"  />

        <Grid x:Name="LeftButtonLayout" AbsoluteLayout.LayoutFlags="PositionProportional" RowDefinitions="2*, 3*">
            <Button x:Name="L1Button" Grid.Row="0" Text="L1" Pressed="L1Button_Pressed" Released="L1Button_Released" CornerRadius = "5" FontAttributes = "Bold" TextColor="Gray" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2"  />
            <Button x:Name="L2Button" Grid.Row="1" Text="L2" Pressed="L2Button_Pressed"  Released="L2Button_Released" CornerRadius = "5" FontAttributes = "Bold" TextColor="Gray" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2"  />
        </Grid>
        <Grid x:Name="RightButtonLayout" AbsoluteLayout.LayoutFlags="PositionProportional" RowDefinitions="*, 2*">
            <Button x:Name="R1Button" Grid.Row="0" Text="R1" Pressed="R1Button_Pressed" Released="R1Button_Released" CornerRadius = "5" FontAttributes = "Bold" TextColor="Gray" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2"  />
            <Button x:Name="R2Button" Grid.Row="1" Text="R2" Pressed="R2Button_Pressed" Released="R2Button_Released" CornerRadius = "5" FontAttributes = "Bold" TextColor="Gray" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2"  />
        </Grid>

        <Grid x:Name="DirectionalLayout" AbsoluteLayout.LayoutFlags="PositionProportional" ColumnDefinitions="*, *, *" RowDefinitions="*, *, *">
            <Button x:Name="LeftButton" Grid.Row="1" Grid.Column="0" Pressed="LeftButton_Pressed"  Released="LeftButton_Released"       Text="←" FontSize = "36" CornerRadius = "5" FontAttributes = "Bold" TextColor="Gray" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2" />
            <Button x:Name="UpButton" Grid.Row="0" Grid.Column="1" Pressed="UpButton_Pressed"  Released="UpButton_Released"             Text="↑" FontSize = "36" CornerRadius = "5" FontAttributes = "Bold" TextColor="Gray" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2" />
            <Button x:Name="DownButton" Grid.Row="2" Grid.Column="1" Pressed="DownButton_Pressed"  Released="DownButton_Released"       Text="↓" FontSize = "36" CornerRadius = "5" FontAttributes = "Bold" TextColor="Gray" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2" />
            <Button x:Name="RightButton" Grid.Row="1" Grid.Column="2" Pressed="RightButton_Pressed"  Released="RightButton_Released"    Text="→" FontSize = "36" CornerRadius = "5" FontAttributes = "Bold" TextColor="Gray" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2" />
        </Grid>

        <Grid x:Name="XYABLayout" AbsoluteLayout.LayoutFlags="PositionProportional" ColumnDefinitions="*, *, *" RowDefinitions="*, *, *">
            <Button x:Name="XButton" Text = "X" Grid.Row="1" Grid.Column="0" Pressed="XButton_Pressed" Released="XButton_Released" FontSize = "36" CornerRadius = "999" FontAttributes = "Bold" TextColor = "#0AF" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2" />
            <Button x:Name="YButton" Text = "Y" Grid.Row="0" Grid.Column="1" Pressed="YButton_Pressed" Released="YButton_Released" FontSize = "36" CornerRadius = "999" FontAttributes = "Bold" TextColor = "Yellow" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2" />
            <Button x:Name="AButton" Text = "A" Grid.Row="2" Grid.Column="1" Pressed="AButton_Pressed" Released="AButton_Released" FontSize = "36" CornerRadius = "999" FontAttributes = "Bold" TextColor = "#0F0" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2" />
            <Button x:Name="BButton" Text = "B" Grid.Row="1" Grid.Column="2" Pressed="BButton_Pressed" Released="BButton_Released" FontSize = "36" CornerRadius = "999" FontAttributes = "Bold" TextColor = "#F00" BackgroundColor = "Transparent" BorderColor = "Gray" BorderWidth = "2" />
        </Grid>

        <Grid x:Name="LeftJoystickLayout" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="Center" VerticalOptions="Center">
            <Grid.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="LeftJoystickPan_PanUpdated" />
            </Grid.GestureRecognizers>
            <BoxView x:Name="LeftJoystickArea" BackgroundColor="#111" WidthRequest="150" HeightRequest="150" CornerRadius="75" />
            <BoxView x:Name="LeftJoystickBall" Color="#333" WidthRequest="100" HeightRequest="100" CornerRadius="50" BackgroundColor="Transparent" />
        </Grid>
        <Grid x:Name="RightJoystickLayout" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="Center" VerticalOptions="Center">
            <Grid.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="RightJoystickPan_PanUpdated" />
            </Grid.GestureRecognizers>
            <BoxView x:Name="RightJoystickArea" BackgroundColor="#111" WidthRequest="150" HeightRequest="150" CornerRadius="75" />
            <BoxView x:Name="RightJoystickBall" Color="#333" WidthRequest="100" HeightRequest="100" CornerRadius="50" BackgroundColor="Transparent" />
        </Grid>

    </AbsoluteLayout>
</ContentPage>
